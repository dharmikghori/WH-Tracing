<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_radius_white_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Low Power Notification"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:gravity="center"
            android:text="LED reminder interval for low power notification."
            android:textSize="12sp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Battery power less than 20%"
                android:textColor="@color/grey_999999"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@id/sb_low_battery_20"
                app:layout_constraintLeft_toLeftOf="parent" />

            <SeekBar
                android:id="@+id/sb_low_battery_20"
                style="@style/CustomSeekbarStyle"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="50dp"
                android:max="120"
                android:maxHeight="2dp"
                android:minHeight="2dp"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:progress="0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_low_battery_20_value"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="0"
                android:textColor="@color/black_333333"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@id/sb_low_battery_20"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/sb_low_battery_20" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="s"
                android:textColor="@color/black_333333"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@id/sb_low_battery_20"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/sb_low_battery_20" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Battery power less than 10%"
                android:textColor="@color/grey_999999"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@id/sb_low_battery_10"
                app:layout_constraintLeft_toLeftOf="parent" />

            <SeekBar
                android:id="@+id/sb_low_battery_10"
                style="@style/CustomSeekbarStyle"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="50dp"
                android:max="120"
                android:maxHeight="2dp"
                android:minHeight="2dp"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:progress="0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sb_low_battery_20" />

            <TextView
                android:id="@+id/tv_low_battery_10_value"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="0"
                android:textColor="@color/black_333333"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@id/sb_low_battery_10"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/sb_low_battery_10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="s"
                android:textColor="@color/black_333333"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@id/sb_low_battery_10"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/sb_low_battery_10" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Battery power less than 5%"
                android:textColor="@color/grey_999999"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@id/sb_low_battery_5"
                app:layout_constraintLeft_toLeftOf="parent" />

            <SeekBar
                android:id="@+id/sb_low_battery_5"
                style="@style/CustomSeekbarStyle"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="50dp"
                android:max="120"
                android:maxHeight="2dp"
                android:minHeight="2dp"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:progress="0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sb_low_battery_10" />

            <TextView
                android:id="@+id/tv_low_battery_5_value"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="0"
                android:textColor="@color/black_333333"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@id/sb_low_battery_5"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/sb_low_battery_5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="s"
                android:textColor="@color/black_333333"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@id/sb_low_battery_5"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/sb_low_battery_5" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="20dp"
            android:background="@color/grey_ebebeb" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/blue_2f84d0"
                android:textSize="16sp" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/grey_ebebeb" />

            <TextView
                android:id="@+id/tv_ensure"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="@string/permission_open"
                android:textColor="@color/blue_2f84d0"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>